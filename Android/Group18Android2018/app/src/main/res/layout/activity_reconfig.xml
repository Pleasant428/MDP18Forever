<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context=".ReconfigStringCommand">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:text="@string/reconfig_instruct"
            android:textSize="@dimen/font_size_medium" />

        <Button
            android:id="@+id/tv_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:text="F1"
            android:textSize="30dp"
            android:background="@color/melon"
            android:onClick="onClickF1"/>

        <Button
            android:id="@+id/tv_f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="294dp"
            android:text="F2"
            android:textSize="30dp"
            android:background="@color/melon"
            android:onClick="onClickF2"/>

        <EditText
            android:id="@+id/et_f1"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/tv_f1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:background="@drawable/textbar"
            android:hint="Edit F1"
            android:textSize="@dimen/font_size_medium" />

        <EditText
            android:id="@+id/et_f2"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/tv_f2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:background="@drawable/textbar"
            android:hint="Edit F2"
            android:textSize="@dimen/font_size_medium" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_reset"
            android:layout_marginEnd="84dp"
            android:background="@color/melon"
            android:onClick="Save"
            android:text="Save Commands"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="275dp"
            android:layout_toEndOf="@+id/tv_f1"
            android:background="@color/lightgrey"
            android:onClick="Reset"
            android:text="Reset Commands"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/btn_retrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="187dp"
            android:background="@color/melon"
            android:onClick="Retrieve"
            android:text="Retrieve Saved Commands"
            android:textSize="@dimen/font_size_small" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>