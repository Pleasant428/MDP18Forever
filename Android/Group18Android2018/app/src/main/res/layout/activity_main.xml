<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">


        <com.mdp18.group18android2018.PixelGridView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:contentDescription="pixelGrid"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:visibility="visible"></com.mdp18.group18android2018.PixelGridView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/map"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/status_panel"
                android:layout_width="276dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Robot status"
                    app:layout_constraintHorizontal_bias="0.228"
                    app:layout_constraintVertical_bias="0.422" />

                <TextView
                    android:id="@+id/tv_mystatus"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_status"
                    android:background="@drawable/textbar"
                    android:ems="15"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_map_exploration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mystatus"
                    android:text="String Commands" />


                <TextView
                    android:id="@+id/tv_mystringcmd"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_map_exploration"
                    android:background="@drawable/textbar"
                    android:ems="15"
                    android:text="" />

                <ToggleButton
                    android:id="@+id/tb_setStartCoord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="@string/setStart"
                    android:textOn="@string/onStart"
                    android:textSize="@dimen/font_size_small" />

                <ToggleButton
                    android:id="@+id/tb_setWaypointCoord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="@string/setWaypoint"
                    android:textOn="@string/onWaypoint"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/fwd_btn"
                android:layout_width="67dp"
                android:layout_height="67dip"
                android:layout_marginBottom="143dp"
                android:background="@drawable/fwdarrowbtn"
                android:clickable="true"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/left_btn"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:background="@drawable/leftturnbtn"
                android:clickable="true"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/right_btn"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:background="@drawable/rightturnbtn"
                android:clickable="true"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/rev_btn"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:background="@drawable/reversearrowbtn"
                android:clickable="true"
                android:visibility="visible" />


        </LinearLayout>


    </RelativeLayout>


    <ToggleButton
        android:id="@+id/tb_autoManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textOff="Auto"
        android:textOn="Manual"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onClickUpdate"
        android:text="Update"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ToggleButton
        android:id="@+id/tb_exploration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textOff="Start Exploration"
        android:textOn="Stop Exploration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <ToggleButton
        android:id="@+id/tb_fastestpath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textOff="Start FastestPath"
        android:textOn="Stop FastestPath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_sendToAlgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Send Points"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

    <Button
        android:id="@+id/btn_calibrateRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Calibrate"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/tiltSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:checked="false"
        android:onClick="onClickTiltSwitch"
        android:text="Tilt  "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869" />


</android.support.constraint.ConstraintLayout>